    {
        "op": "core/column-removal",
        "description": "Remove column ``No Field Number``",
        "columnName": "No Field Number"
    },
    {
        "op": "core/blank-down",
        "description": "Blank down cells in column ``SYS Number``",
        "engineConfig": {
            "facets": [],
